{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ESNext",
		"strict": true,
		"outDir": "dist",
		"sourceMap": true,
		"allowJs": true,
		"skipLibCheck": true,
		"jsx": "preserve",
		"moduleResolution": "Node",
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"rootDir": "src",
		"declaration": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"]
}
